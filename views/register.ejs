<body id="first">
  <div class="container">
      <div class="row">
          <div class="col-md-6">
              <div class="card" style="border-top-width:0; border-bottom-width:0;">
                  <form action="/register" method="POST" class="box" >
                      <h1>Register</h1>
                      <p class="text-muted"> Please enter your login and password!</p>
                      <input type="text" name="peername" autocomplete="off" placeholder="Name">
                      <input type="email" name="peermail"  autocomplete="off" placeholder="Email">
                      <input type="password" name="password" placeholder="Password">
                      <button type="submit" class="btn btn-dark">Register</button>
                      <div class="col-md-12">
                          <ul class="social-network social-circle">
                              <li><a href="#" class="icoFacebook" title="Facebook"><i class="fab fa-facebook-f"></i></a></li>
                              <li><a href="#" class="icoTwitter" title="Twitter"><i class="fab fa-twitter"></i></a></li>
                              <li><a href="#" class="icoGoogle" title="Google +"><i class="fab fa-google-plus"></i></a></li>
                          </ul>
                      </div>
                  </form>
              </div>
          </div>
      </div>
  </div>
</body>
